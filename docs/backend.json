
{
  "entities": {
    "Article": {
      "title": "Article",
      "type": "object",
      "description": "Represents a blog article on the website.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "content": { "type": "string" },
        "author": { "type": "string" },
        "publicationDate": { "type": "string", "format": "date-time" },
        "thumbnailUrl": { "type": "string", "format": "uri" },
        "tags": { "type": "array", "items": { "type": "string" } },
        "type": { "type": "string", "enum": ["destination", "story"] },
        "category": { "type": "string" },
        "excerpt": { "type": "string" },
        "image": { "type": "string" }
      },
      "required": ["id", "title", "content", "image", "type"]
    },
    "TripPackage": {
      "title": "Trip Package",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "price": { "type": "string" },
        "time": { "type": "string" },
        "description": { "type": "string" },
        "spots": { "type": "array", "items": { "type": "string" } },
        "color": { "type": "string" },
        "borderColor": { "type": "string" }
      }
    },
    "WebsiteConfig": {
      "title": "Website Configuration",
      "type": "object",
      "description": "Global settings for images and design.",
      "properties": {
        "heroImages": {
          "type": "object",
          "properties": {
            "home": { "type": "string" },
            "seeAndDo": { "type": "string" },
            "stories": { "type": "string" }
          }
        },
        "categoryImages": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "packageDesign": {
          "type": "object",
          "properties": {
            "cardColor": { "type": "string" },
            "cardBorder": { "type": "string" }
          }
        }
      }
    },
    "GalleryImage": {
      "title": "Gallery Image",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "url": { "type": "string" },
        "caption": { "type": "string" },
        "order": { "type": "number" }
      }
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/articles/{articleId}",
        "definition": {
          "entityName": "Article",
          "schema": { "$ref": "#/backend/entities/Article" },
          "description": "Stores blog and destination articles."
        }
      },
      {
        "path": "/trip_packages/{packageId}",
        "definition": {
          "entityName": "TripPackage",
          "schema": { "$ref": "#/backend/entities/TripPackage" },
          "description": "Stores tour packages."
        }
      },
      {
        "path": "/config/website",
        "definition": {
          "entityName": "WebsiteConfig",
          "schema": { "$ref": "#/backend/entities/WebsiteConfig" },
          "description": "Global website configuration for images and layout styles."
        }
      },
      {
        "path": "/gallery/{imageId}",
        "definition": {
          "entityName": "GalleryImage",
          "schema": { "$ref": "#/backend/entities/GalleryImage" },
          "description": "Images for the trip gallery."
        }
      }
    ]
  }
}
