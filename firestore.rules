rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * FIREBASE SECURITY RULES - VisitWonosobo
     * Mengatur akses publik untuk konten website.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      // Izinkan akses admin berdasarkan UID spesifik atau koleksi roles_admin
      return isSignedIn() && (
        request.auth.uid == "AsSq4g4LwpV7ZmUpplRoCCzP5j33" ||
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid))
      );
    }

    // --- Aturan Koleksi Artikel ---
    // Izinkan siapa saja membaca artikel (untuk blog dan destinasi)
    match /articles/{articleId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- Aturan Koleksi Paket Trip ---
    // Izinkan siapa saja melihat paket wisata
    match /trip_packages/{packageId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- Aturan Koleksi Galeri ---
    match /gallery/{imageId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- Aturan Koleksi Konfigurasi ---
    match /config/{configId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- Aturan Koleksi Admin Roles ---
    match /roles_admin/{userId} {
      allow get: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow list: if isAdmin();
      allow write: if false;
    }
    
    // Trigger redeploy: Menjamin akses publik untuk list/get articles dan trip_packages
  }
}