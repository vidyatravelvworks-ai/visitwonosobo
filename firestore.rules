
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.uid == "AsSq4g4LwpV7ZmUpplRoCCzP5j33" ||
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid))
      );
    }

    match /articles/{articleId} {
      allow read, list: if true;
      allow write: if isAdmin();
    }

    match /trip_packages/{packageId} {
      allow read, list: if true;
      allow write: if isAdmin();
    }

    match /gallery/{imageId} {
      allow read, list: if true;
      allow write: if isAdmin();
    }

    match /config/{configId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /roles_admin/{userId} {
      allow get: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow list: if isAdmin();
      allow write: if false;
    }
    
    // Deployment trigger: Memperbarui akses dashboard display dan pratinjau hero.
    // Terakhir diperbarui: 2026-02-11 09:00 UTC
  }
}
