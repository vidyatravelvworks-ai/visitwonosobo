rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * FIREBASE SECURITY RULES
     * Memastikan akses publik untuk membaca artikel, namun membatasi penulisan 
     * hanya untuk akun administrator terverifikasi.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    /** 
     * @description Mengecek apakah user adalah admin.
     * Mengizinkan UID spesifik user atau UID yang terdaftar di koleksi roles_admin.
     */
    function isAdmin() {
      return isSignedIn() && (
        request.auth.uid == "AsSq4g4LwpV7ZmUpplRoCCzP5j33" ||
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid))
      );
    }

    function isExistingAdmin() {
      return isAdmin() && resource != null;
    }

    // --- Aturan Koleksi ---

    match /articles/{articleId} {
      allow get, list: if true;
      
      allow create: if isAdmin() 
        && request.resource.data.id == articleId;
      
      allow update: if isExistingAdmin() 
        && request.resource.data.id == resource.data.id;
        
      allow delete: if isExistingAdmin();
    }

    match /roles_admin/{userId} {
      allow get: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow list: if isAdmin();
      allow create, update, delete: if false; // Hanya dikelola via Admin SDK atau Master Admin UID
    }
  }
}