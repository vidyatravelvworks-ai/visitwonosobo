rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * FIREBASE SECURITY RULES
     * Memastikan akses publik untuk membaca konten website (Artikel, Paket, Galeri, Konfigurasi).
     * Akses penulisan (create, update, delete) dibatasi hanya untuk Administrator.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.uid == "AsSq4g4LwpV7ZmUpplRoCCzP5j33" ||
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid))
      );
    }

    // --- Aturan Koleksi Artikel ---
    match /articles/{articleId} {
      allow read: if true;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // --- Aturan Koleksi Paket Trip ---
    match /trip_packages/{packageId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- Aturan Koleksi Galeri ---
    match /gallery/{imageId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- Aturan Koleksi Konfigurasi ---
    match /config/{configId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- Aturan Koleksi Admin Roles ---
    match /roles_admin/{userId} {
      allow get: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow list: if isAdmin();
      allow write: if false;
    }
    
    // Pemicu redeploy aturan untuk memastikan akses publik aktif
  }
}