
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.uid == "AsSq4g4LwpV7ZmUpplRoCCzP5j33" ||
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid))
      );
    }

    // Menggunakan recursive wildcard untuk memastikan akses query koleksi dan dokumen terpenuhi
    match /articles/{document=**} {
      allow read, list: if true;
      allow write: if isAdmin();
    }

    match /trip_packages/{document=**} {
      allow read, list: if true;
      allow write: if isAdmin();
    }

    match /gallery/{document=**} {
      allow read, list: if true;
      allow write: if isAdmin();
    }

    match /config/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /roles_admin/{userId} {
      allow get: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow list: if isAdmin();
      allow write: if false;
    }
    
    // Deployment trigger: Perbaikan akses publik untuk query Stories dan Destinasi.
    // Terakhir diperbarui: 2026-02-11 10:15 UTC
  }
}
