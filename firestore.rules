rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.uid == "AsSq4g4LwpV7ZmUpplRoCCzP5j33" ||
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid))
      );
    }

    // Aturan untuk Artikel (Blog & Destinasi)
    match /articles/{articleId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    // Aturan untuk Paket Wisata
    match /trip_packages/{packageId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    // Aturan untuk Galeri Foto
    match /gallery/{imageId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    // Aturan untuk Konfigurasi Website (Hero Images, dll)
    match /config/{configId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    // Aturan untuk Roles Admin
    match /roles_admin/{userId} {
      allow get: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow list: if isAdmin();
      allow write: if false;
    }
    
    // Deployment trigger: Memperbarui aturan akses publik eksplisit (get/list)
    // Terakhir diperbarui: 2026-02-07 09:30 UTC untuk memperbaiki error perizinan pada listing koleksi /articles
  }
}